<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="200.0" prefWidth="200.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="views.AttributePanelController">
  <children>
    <GridPane AnchorPane.bottomAnchor="45.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="5.0">
      <children>
        <Label text="X" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
        <Label text="Y" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
        <Label text="Rotation" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
        <Label text="Scale" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
        <TextField fx:id="translationXField" onInputMethodTextChanged="#updateShape" GridPane.columnIndex="1" />
        <TextField fx:id="translationYField" onInputMethodTextChanged="#updateShape" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id="rotationField" onInputMethodTextChanged="#updateShape" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <TextField fx:id="scaleField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      </children>
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="96.0" minWidth="10.0" prefWidth="59.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="143.0" minWidth="10.0" prefWidth="111.0" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      </rowConstraints>
    </GridPane>
    <Button id="ok" mnemonicParsing="false" onAction="#handleOk" text="OK" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="100.0" />
    <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="25.0" />
  </children>
</AnchorPane>
